<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/f0_s1_row1_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:weightSum="300"
    tools:ignore="missingPrefix">

    <TextView
        android:id="@+id/f0_s1_rankingitem_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="33"
        android:gravity="center"
        android:text="1"
        android:textColor="#373737"
        android:textSize="13dp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/f0_s1_rankingitem_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toRightOf="@id/f0_s1_rankingitem_number"
        android:layout_weight="36" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="231"
        android:orientation="vertical">

        <TextView
            android:id="@+id/f0_s1_rankingitem_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50"
            android:gravity="bottom"
            android:paddingLeft="14dp"
            android:text="무슨무슨 원단 이름"
            android:textColor="#2b2b2b"
            android:textSize="12dp"
            app:fontName="Custom2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/f0_s1_rankingitem_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/f0_s1_rankingitem_name"
                android:gravity="top"
                android:paddingLeft="14dp"
                android:paddingTop="1dp"
                android:text="5,000원"
                android:textColor="#00c3ff"
                android:textSize="11dp"
                app:fontName="Custom2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/f0_s1_rankingitem_name"
                android:layout_toRightOf="@id/f0_s1_rankingitem_price"
                android:gravity="top"
                android:paddingLeft="4dp"
                android:paddingTop="3dp"
                android:text="1마 단위"
                android:textColor="#ababab"
                android:textSize="9dp"
                app:fontName="Custom1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f5f5"
    android:paddingBottom="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="5dp">

    <com.startup.uic.CustomCardView
        android:id="@+id/row3_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="1.5dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="476dp">

            <RelativeLayout
                android:id="@+id/row3_header"
                android:layout_width="match_parent"
                android:layout_height="34dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:background="@color/main_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="배송지 정보"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    app:fontName="Custom1" />

                <ImageButton
                    android:id="@+id/row3_expand_collapse_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/expand_collapse" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="34dp"
                android:gravity="center_horizontal|bottom">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="72dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/edittext_box"
                        android:text="최근목록"
                        android:textColor="#2b2b2b"
                        android:textSize="13sp"
                        app:fontName="Custom1" />

                    <Button
                        android:layout_width="72dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/edittext_box"
                        android:text="직접입력"
                        android:textColor="#2b2b2b"
                        android:textSize="13sp"
                        app:fontName="Custom1" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="84dp"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="받는분"
                        android:textColor="#2b2b2b"
                        android:textSize="13dp"
                        app:fontName="Custom1" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/edittext_box" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/배송지"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="배송지"
                        android:textColor="#2b2b2b"
                        android:textSize="13dp"
                        app:fontName="Custom1" />

                    <EditText
                        android:id="@+id/postcode"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/address_button"
                        android:layout_toRightOf="@+id/배송지"
                        android:background="@drawable/edittext_box" />

                    <Button
                        android:id="@+id/address_button"
                        android:layout_width="93dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/order_gray_button"
                        android:text="주소찾기"
                        android:textColor="#ffffff"
                        android:textSize="13dp"
                        app:fontName="Custom1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/space1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="배송지"
                        android:textColor="#ffffff"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/space1"
                        android:background="@drawable/edittext_box" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/space2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="배송지"
                        android:textColor="#ffffff"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/additional_address"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/space2"
                        android:background="@drawable/edittext_box"
                        android:hint="상세주소를 입력해 주세요."
                        android:textSize="13dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/연락처"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="연락처"
                        android:textColor="#2b2b2b"
                        android:textSize="13dp"
                        app:fontName="Custom1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/연락처"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/row4_phone_1"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="70"
                            android:background="@drawable/edittext_box" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#d5d5d5"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/row4_phone_2"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="70"
                            android:background="@drawable/edittext_box" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="#d5d5d5"
                            android:textSize="16dp" />

                        <EditText
                            android:id="@+id/row4_phone_3"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="70"
                            android:background="@drawable/edittext_box" />

                    </LinearLayout>

                </RelativeLayout>

                <Spinner
                    android:id="@+id/txt_question_type"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_box"
                    android:gravity="right"
                    android:textColor="#2b2b2b"
                    android:textSize="13dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="89dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_box"
                    android:gravity="top"
                    android:hint="배송 요청사항을 입력해 주세요."
                    android:textColor="#ababab"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:gravity="center_vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:scaleX="2"
                        android:scaleY="2"
                        app:lottie_fileName="checkbox.json" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:text="배송지 목록에 추가"
                        android:textColor="#2b2b2b"
                        android:textSize="13dp"
                        app:fontName="Custom1" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </com.startup.uic.CustomCardView>

</RelativeLayout>